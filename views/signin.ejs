<% layout('/layout/page')  -%>
<% block('title', 'Авторизация') -%>

<div class="page login">
    <h1 class="page__title login__title">Авторизация</h1>
    <form class="login__form form" action="/signin" method="post">
        <fieldset class="form__input-group">
            <input class="form__input" type="text" name="login" value="" placeholder="Логин *">
            <input class="form__input" type="text" name="password" value="" placeholder="Пароль *">
            <div class="form__btn-group">
                <button class="form__button button" type="submit" name="button">Sign In</button>
                <a class="link form__link" href="/signup">Sign Up</a>
            </div>
        </fieldset>
    </form>
</div>