<% layout('/layout/page')  -%>
<% block('title', 'Регистрация') -%>

<div class="page login">
    <h1 class="page__title login__title">Регистрация</h1>
    <form class="login__form form" action="/signup" method="post">
        <fieldset class="form__input-group">
            <input class="form__input" type="text" name="username" value="" placeholder="Имя *">
            <input class="form__input" type="text" name="login" value="" placeholder="Логин *">
            <input class="form__input" type="text" name="password" value="" placeholder="Пароль *">
            <input class="form__input" type="text" name="phone" value="" placeholder="Телефон *">
            <input class="form__input" type="text" name="password" value="" placeholder="Пароль *">
            <input class="form__input" type="text" name="passwordConfirm" value="" placeholder="Подтверждение пароля *">
            <div class="form__btn-group">
                <button class="form__button button" type="submit" name="button">Sign Up</button>
                <a class="link form__link" href="/signin">Sign In</a>
            </div>
        </fieldset>
    </form>
</div>